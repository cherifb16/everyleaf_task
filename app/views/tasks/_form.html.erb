  </div>

  <div class="field">
  <%= form.label :priority %>
  <%= form.select(:priority, options_for_select([['high','high'],['medium','medium'],['low','low']])) %>
  </div>
  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date, class:"form-control"%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
