<hr class="border border-dark">
<div class="card-body">
<h1  style="text-align:center;">Labels</h1>

<table  class="table table-striped table-dark">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      
      <th colspan="3">More Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.title %></td>
        <td><%= label.content %></td>
        <td><%= label.user.username %></td>
        
        <td><button type="button" class="btn btn-success"><%= link_to 'Show', label %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_label_path(label) %></button></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path, class: '' %>
</div>